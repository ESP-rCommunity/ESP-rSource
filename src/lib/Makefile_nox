SHELL=/bin/sh
LIB = libxesru.a

OBJECTS = esru_blk.o esru_lib.o
C_OBJ = esru_nox.o

$(LIB): $(OBJECTS) $(C_OBJ)
	ar ruv $(LIB) $(OBJECTS) $(C_OBJ)
	if test -s /usr/bin/ranlib ; \
	then ranlib $(LIB) ; \
	fi

install:
	cp $(LIB) $(LIBdir)
	if test -s /usr/bin/ranlib ; \
	then ranlib $(LIBdir)/$(LIB) ; \
	fi
clean:
	rm -f core $(LIB) $(OBJECTS) $(C_OBJ)

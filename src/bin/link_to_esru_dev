#!/bin/csh
# create a link to current X11 esp-r executables in the users bin folder.
# Edit the specific location of $where and $wheredot to match your
# computer setup.
# The script also copies the current distribution esp-r/esprc
# file into your home folder as .esprc so that climate and exemplars
# for the executables can be found.
echo "use is: link_to_esru_dev [path to $HOME/esru_dev/esp-r/bin]"
set where=$HOME/esru_dev/esp-r/bin
set wheredot=$HOME/esru_dev/esp-r
foreach i ( bps clm dfs e2r ecnv grd ish mld espvwf pdb pro prj res viewer )
if ( -f $where/$i )then
  if ( -f $HOME/bin/$i ) rm -f $HOME/bin/$i
  ln -s $where/$i $HOME/bin/$i
  echo $i " is now pointing to "$where/$i
 endif
end 
if ( -f $HOME/.esprc ) mv $HOME/.esprc $HOME/.esprc_dev
cp -f $wheredot/esprc $HOME/.esprc
cp -f $wheredot/esprc $HOME/.esprc_dev
echo "updated user .esprc file." 

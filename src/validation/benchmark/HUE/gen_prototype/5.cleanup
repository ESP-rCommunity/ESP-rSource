#!/bin/bash
## SAPP 2009 Project File
## Script to cleanup files generated by model creation scripts

# initialise
A='n' ; B='n'
echo "Complete cleanup of model files? [y/n]"
read A
if [ $A == 'y' ] ; then
  rm -rf ../tmp/models/cfg/X1*.cfg # Some O/S do not support large number of files
  rm -rf ../tmp/models/cfg/X2*.cfg 
  rm -rf ../tmp/models/cfg/X3*.cfg 
  rm -rf ../tmp/models/cfg/X4*.cfg 
  rm -rf ../tmp/models/cfg/X5*.cfg 
  rm -rf ../tmp/models/zones/*
  rm -rf ../tmp/models/dbs/*
  rm -rf ../tmp/models/ctl/*
  rm -fr ../tmp/models/cfg/*
else
  echo "Only keep cfg files? [y/n]"
  read B
  if [ $B == 'y' ] ; then
    rm -rf ../tmp/models/zones/*
    rm -rf ../tmp/models/dbs/*
    rm -rf ../tmp/models/ctl/*
    rm -fr ../tmp/models/cfg/*.cnn
    rm -fr ../tmp/models/cfg/hpc-run.uk_SAPP* ../tmp/models/cfg/check.uk_SAPP*
  else
    echo "Remove cfg files? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -rf ../tmp/models/cfg/X1*.cfg # Some O/S do not support large number of files
      rm -rf ../tmp/models/cfg/X2*.cfg 
      rm -rf ../tmp/models/cfg/X3*.cfg 
      rm -rf ../tmp/models/cfg/X4*.cfg 
      rm -rf ../tmp/models/cfg/X5*.cfg 
    fi

    echo "Remove con & tmc files? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -rf ../tmp/models/zones/*.con ../tmp/models/zones/*.tmc
    fi

    echo "Remove shd files? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -rf ../tmp/models/zones/*.shd ../tmp/models/zones/*.shda 
    fi

    echo "Remove opr files? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -rf ../tmp/models/zones/*.opr
    fi

    echo "Remove geo files? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -rf ../tmp/models/zones/*.geo
    fi

    echo "Remove HPC scripts? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -fr ../tmp/models/cfg/hpc-run.uk_SAPP* ../tmp/models/cfg/check.uk_SAPP*
    fi

    echo "Remove binary climate files? [y/n]"
    read B
    if [ $B == 'y' ] ; then
      rm -fr ../tmp/clm_bin/*.bin
    fi
  fi
fi
echo "Remove results.file ? [y/n]"
read B
if [ $B == 'y' ] ; then
  rm -fr ../results/results.file
fi
echo "Remove raw results database ? [y/n]"
read B
if [ $B == 'y' ] ; then
  rm -fr ../results/RRDB*
fi

rm -f 3.proto_sim_pp
chmod 744 3.proto_sim
rm *pp.* hpc* -fr
cd ../tmp/models/cfg
rm -rf temp.* libb data.grt* core.* *.txt *.res
rm -rf cfgfileR2S
cd ../../../gen_prototype
#rm -rf  ../results/clm.summary.data.a

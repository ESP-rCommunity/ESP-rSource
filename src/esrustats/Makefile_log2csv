SRCdir = `pwd`/..
LIBdir = $(SRCdir)/lib
COMdir = $(SRCdir)/esrucom
PROG = log2csv$(EXE)
MFC = lin
MCC=gcc
MCPL=g++
MFC=gfortran
CFLAGS=-I/usr/local/include -I../ -I/usr/include -DLIN -g -fno-automatic -DGCC4
FFLAGS=-I/usr/local/include -DLIN -DX11 -g -fno-automatic -DGCC4 
##LD_FLAGS=-Wl,--reduce-memory-overheads
LD_FLAGS=-Wl

.SUFFIXES: .o .F
.F.o:
	$(MFC) $(FFLAGS) -c $<

OBJECTS = bam_support.o bam_stats.o sort.o esru_fc.o esru_blk.o

$(PROG): $(OBJECTS)
	$(MFC) $(LD_FLAGS) -o $(PROG) $(FFLAGS) $(OBJECTS)

strip:
	@if [ -f $(PROG) ]; then strip $(PROG); fi

install:
	@if [ -f $(PROG) ]; then cp $(PROG) $(ESPBinDir); fi

clean:
	rm -f core $(PROG) $(PROG).exe $(OBJECTS)  
        
